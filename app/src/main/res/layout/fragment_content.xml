<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.v4.view.ViewPager
    android:id="@+id/vp_content"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

</android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/rg_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg">
     <RadioButton
         android:id="@+id/rb_main"
         style="@style/TabStyle"
         android:drawableTop="@drawable/home_selector"
         android:text="首页"
         android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_news"
            style="@style/TabStyle"
            android:drawableTop="@drawable/news_selector"
            android:text="新闻中心"

            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_smart"
            style="@style/TabStyle"
            android:drawableTop="@drawable/smart_selector"
            android:text="智慧服务"

            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_gov"
            style="@style/TabStyle"
            android:drawableTop="@drawable/gov_selector"
            android:text="政务"

            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/TabStyle"
            android:drawableTop="@drawable/setting_selector"
            android:text="设置"

            android:layout_height="wrap_content" />
    </RadioGroup>



</LinearLayout>
